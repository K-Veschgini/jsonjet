// Minimal demo to test exp() function in select

create stream numbers;
create stream results;
create flow exp_test as
numbers | select { x: x, exp_x: exp(x) } | assert_or_save_expected("tests/expected/exp-demo.ndjson");
insert into numbers { x: 0 };
insert into numbers { x: 1 };
insert into numbers { x: 2 };
flush numbers;