{
  "name": "@jsonjet/server",
  "version": "0.0.0",
  "description": "Bun server for JSONJet with HTTP API and WebSocket streaming",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "bun run src/index.js",
    "dev": "bun --watch src/index.js",
    "build": "bun build src/index.js --compile --outfile=jsonjet-server",
    "build:run": "bun run build && ./jsonjet-server"
  },
  "dependencies": {
    "@jsonjet/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
} 