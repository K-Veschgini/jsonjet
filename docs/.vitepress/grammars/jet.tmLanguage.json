{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "jet",
  "scopeName": "source.jet",
  "fileTypes": ["jet", "jsonjet"],
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#json-objects"
    },
    {
      "include": "#array-access"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jet",
          "match": "\\b(create|or|replace|stream|flow|lookup|insert|into|delete|list|as|where|select|scan|step|emit)\\b"
        },
        {
          "name": "keyword.operator.logical.jet",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.jet",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipe.jet",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.comparison.jet",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.jet",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.jet",
          "match": "(\\+|\\-|\\*|\\/|%)"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.jet",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.jet",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.jet",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jet",
          "match": "//.*$"
        },
        {
          "name": "comment.block.jet",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "identifiers": {
      "name": "variable.other.jet",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    "json-objects": {
      "patterns": [
        {
          "name": "punctuation.definition.object.begin.jet",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.object.end.jet",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.array.begin.jet",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.jet",
          "match": "\\]"
        },
        {
          "name": "punctuation.separator.key-value.jet",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.jet",
          "match": ","
        }
      ]
    },
    "array-access": {
      "name": "meta.array-access.jet",
      "match": "([a-zA-Z_][a-zA-Z0-9_]*)(\\[)(\\d+|[a-zA-Z_][a-zA-Z0-9_]*)(\\])",
      "captures": {
        "1": { "name": "variable.other.jet" },
        "2": { "name": "punctuation.definition.array.begin.jet" },
        "3": { "name": "constant.numeric.jet" },
        "4": { "name": "punctuation.definition.array.end.jet" }
      }
    }
  }
}